            <td>
                @Html.DisplayFor(modelItem => item.duyuruIcerik3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duyuruGorsel1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duyuruGorsel2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duyuruGorsel3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duyuruGorsel4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duyuruGorsel5)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">İncele</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
