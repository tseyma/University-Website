            <th>
                @Html.DisplayNameFor(model => model.duyuruGorsel2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duyuruGorsel3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duyuruGorsel4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duyuruGorsel5)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.duyuruBaslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duyuruTur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.duyuruTarih)
