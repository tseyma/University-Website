@model IEnumerable<duzce_uni.Models.duyurular>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Duyurular</h2>

<p>
    <a asp-action="Create">Yeni Duyuru Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.duyuruBaslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duyuruTur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duyuruTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duyuruIcerik1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.duyuruIcerik2)
